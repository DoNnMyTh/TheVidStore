
@{
    ViewBag.Title = "Customer Information";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<h2>Customers</h2>
<p class="navbar-right">
    <button onclick="location.href='@Url.Action("New", "Customer")'" ;return false;><i class="btn btn-info">Add Customer</i></button>
</p>

<table id="customers1" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Subscribed To Newsletter
            </th>
            <th>

                Membership Type
            </th>
            <th>
                Discount rate
            </th>

            <th>
                Details
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>

    <tbody>

        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @customer.Name
                </td>
                <td>
                    @customer.IsSubscribedToNewsletter
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
                <td>
                    @customer.MembershipType.DiscountRate%
                </td>
                <td>
                    <button onclick="location.href='@Url.Action("Det", new { id = customer.Id })';return false;" class="btn btn-info">Details</button>
                </td>
                <td>
                    <button onclick="location.href='@Url.Action("Edit", new { id = customer.Id })';return false;" class="btn btn-primary">Edit</button>
                </td>
                <td>
                    <button data-customer-id="@customer.Id" class="btn btn-danger js-delete">Delete</button>
                </td>
            </tr>

        }
    </tbody>
</table>


@section scripts{
    <script>
        $(document).ready(function () {


$("#customers1").DataTable();

        });

        $(document).ready(function () {

            $("#customers1").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this Customer?", function (result) {
                    if (result) {
                        $.ajax
                            (
                                {
                                    url: "/api/customers/" + button.attr("data-customer-id"),
                                    method: "DELETE",
                                    success: function () {
                                        button.parents("tr").remove();
                                    }
                                }
                );
                    }
                });
            });
        });
    </script>
}
