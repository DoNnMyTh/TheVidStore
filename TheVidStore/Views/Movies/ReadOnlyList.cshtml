@{
    ViewBag.Title = "Movies Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<table id="movies1" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                Movies
            </th>

            <th>
                Number of copies
            </th>
            <th>
                Genre
            </th>

        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#movies1').dataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns:[
                    {
                        data: "name"


                    },

                    {
                        data:"numberOfMovies"
                    },
                    {
                        data:"genreOfMovie"

                    }


                ]

            });
        });
    </script>
}








