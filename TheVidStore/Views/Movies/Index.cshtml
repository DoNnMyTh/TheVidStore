@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<div class="navbar-right">
    <button  onclick="location.href='@Url.Action("NewMovie", "Movies")'" ;return false;><i class="btn btn-info">Add Movie</i></button>
</div>
<table id="movies" class="table-hover table-bordered table-striped" >

    <thead>Movies Data</thead>
    <tr>
        <th>  Movies</th>

        <th> Number of copies</th>

        <th> Year of release</th>

        <th> Genre</th>
        <th>
            Details
        </th>
        <th>
            Edit
        </th>
    </tr>
    <tbody>
        @foreach (var movies in Model)
        {
            <tr>
                <td>
                    @movies.Name
                </td>
                <td>
                    @movies.NumberOfMovies
                </td>
                <td>
                    @movies.Year.Year
                </td>
                <td>
                    @movies.GenreOfMovie
                </td>
                <td>
                    <button onclick="location.href='@Url.Action("Det", new { id = movies.Id })';return false;" class="btn btn-info">Details</button>
                </td>
                <td>
                    <button onclick="location.href='@Url.Action("EditMovie","movies",  new { id = movies.Id })';return false;"class="btn btn-primary">Edit</button>
                </td>
                <td>
                    <button data-movie-id="@movies.Id" class="btn btn-link btn-danger js-delete">Delete</button>
                </td>

            </tr>

        }
    </tbody>
</table>
@section scripts{

    <script>
    $(document).ready(function () {
        $("#movies .js-delete").on("click", function () {
            var button = $(this);

            if ( confirm("Are you sure you want to delete this movie?"))
            {
                $.ajax({
                    url: "/api/movies/" + button.attr("data-movie-id"),
                    method: "DELETE",
                    success: function(){
                        button.parents("tr").remove();
                    }
                });
            }
        });
    });
    </script>
}








