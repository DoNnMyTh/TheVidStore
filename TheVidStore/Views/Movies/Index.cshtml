@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


<table class="table-hover table-bordered table-striped">

    <thead>Movies Data</thead>
    <tr>
        <th>  Movies</th>

        <th> Number of copies</th>

        <th> Year of release</th>

        <th> Genre</th>
        <th>
            Details
        </th>
        <th>
            Edit
        </th>
    </tr>
    <tbody>
        @foreach (var movies in Model)
        {
            <tr>
                <td>
                    @movies.Name
                </td>
                <td>
                    @movies.NumberOfMovies
                </td>
                <td>
                    @movies.YearOfRelease
                </td>
                <td>
                    @movies.GenreOfMovie
                </td>
                <td>
                    @Html.ActionLink("Movies", "Det", new { id = movies.Id })
                </td>
                <td>
                    @Html.ActionLink("movies", "Edit", new { id = movies.Id })
                </td>
               
            </tr>

        }
    </tbody>
</table>



